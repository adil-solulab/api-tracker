{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "build",
        "baseUrl": "src",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "src/views",
        "src/assets"
    ],
    "exclude": [
        "node_modules",
    ]
}